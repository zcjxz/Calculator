<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zcj.calculator.MainActivity">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center">
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/et_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:textColor="#fff"
            android:textSize="50sp"
            android:maxLines="2"
            android:gravity="right|center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            style="@style/item"
            android:text="C"
            android:onClick="BigC"
            />
        <TextView
            style="@style/item"
            android:text="÷"
            android:onClick="Calculats"
            />
        <TextView
            style="@style/item"
            android:text="×"
            android:onClick="Calculats"
            />
        <TextView
            android:id="@+id/delete"
            style="@style/item"
            android:text="←"
            android:onClick="Back"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            style="@style/item"
            android:text="7"
            android:onClick="Number"
            />
        <TextView
            style="@style/item"
            android:text="8"
            android:onClick="Number"
            />
        <TextView
            style="@style/item"
            android:text="9"
            android:onClick="Number"
            />
        <TextView
            android:id="@+id/subtraction"
            style="@style/item"
            android:text="-"
            android:onClick="Calculats"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            style="@style/item"
            android:text="4"
            android:onClick="Number"
            />
        <TextView
            style="@style/item"
            android:text="5"
            android:onClick="Number"
            />
        <TextView
            style="@style/item"
            android:text="6"
            android:onClick="Number"
            />
        <TextView
            style="@style/item"
            android:text="+"
            android:onClick="Calculats"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/item"
                    android:text="1"
                    android:onClick="Number"
                    />
                <TextView
                    style="@style/item"
                    android:text="2"
                    android:onClick="Number"
                    />
                <TextView
                    style="@style/item"
                    android:text="3"
                    android:onClick="Number"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/item"
                    android:layout_weight="2"
                    android:text="0"
                    android:onClick="Number"
                    />
                <TextView
                    style="@style/item"
                    android:text="."
                    android:onClick="Calculats"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                style="@style/item"
                android:text="="
                android:onClick="Equal"
                android:background="@drawable/press_equals"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
